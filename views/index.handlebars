<style>
    #burgerRequest {
        width: 100%;
    }
    .burgerRow {
        height: 100%;
        margin: 1em;
    }
</style>
<form action="/" method="POST">
    <div class="row burgerRow">
        <div class="col-sm-5 mx-auto">
            <ul class="list-group">
                {{#each burgersAvailable}}
                <div class="row">
                    <div class="col-sm-7">
                        <li class="list-group-item">{{id}}: {{burger_name}}
                    </div>
                    <div class="col-sm-5">
                        <a class="btn btn-secondary" href="/devour/{{id}}">Devour It</a>
                        </li>
                    </div>
                </div>
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4 mx-auto text-center">
            <textarea name="burger" id="burgerRequest" rows="3"></textarea>
            <button type="submit" class="btn btn-primary mx-auto">Submit</button>
        </div>
        <div class="col-sm-3">
            <ul class="list-group">
                {{#each burgersDevoured}}
                <li class="list-group-item"><s>{{id}}: {{burger_name}}</s></li>
                {{/each}}
            </ul>
        </div>
    </div>
</form>